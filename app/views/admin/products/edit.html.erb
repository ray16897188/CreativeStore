<div class="container">
	<h3 class="well">更新产品信息</h3>
	<div class="col-md-4" style="padding-left: 0px">
		<br>

		<%= render partial: "common/product_image", locals: {product: @product, size: "medium", admin: true} %>

	</div>
	<div class="col-md-4 col-md-offset-1">
		<%= simple_form_for [:admin, @product] do |f| %>

		<%= f.input :title, title: "xxxx" %>
		<br>

		<%= f.input :description %>
		<br>

		<%= f.input :price%>
		<br>

		<%= f.input :quantity %>
		<br>

		<%= f.input :image %>
		<%= f.file_field  :photos, as: :file, multiple: true%>
		<%= f.submit "更新产品信息", :disable_with => "提交中...", class: "btn btn-success btn-lg pull-right" %>
		<% end %>

	</div>
</div>
